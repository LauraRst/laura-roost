               <span>
                    <i class="fas fa-check"></i> {{ message }}
               </span>
                    </div>
                {% endfor %}
            <h3>Mes identifiants</h3>
                {{ form_start(userForm) }}

                {{ form_widget(userForm) }}
                <button type="submit" class="btn btn-primary">Modifier mes identifiants</button>
                {{ form_end(userForm) }}
            </div>
            <hr>
            <div class="pb-4">
                <h3>Modifier mon mot de passe </h3>
                {{ form_start(passwordForm) }}
                {{ form_widget(passwordForm) }}
                <button type="submit" class="btn btn-primary">Modifier mon mot de passe</button>
                {{ form_end(passwordForm) }}
            </div>
            <hr>

            <div class="pt-4">
                  <h3>Informations personnelles </h3>
