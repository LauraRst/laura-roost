{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <main class="container px-4 page-item page-register">
        <div class="page-title py-4">
            <h3>Bienvenue sur Dekor.com</h3>
        </div>
        <div class="row mb-4 justify-content-center">

            <div class="col-4 register">
                <h3>Pas encore de compte ?</h3>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn-primary btn">S'inscrire</button>
                {{ form_end(form) }}
            </div>
            <div class="col-4 login">
                <h3>J'ai déjà un compte</h3>
                <a href="{{ path('login') }}" class="btn btn-secondary">
                    Se connecter
                </a>
            </div>
        </div>
    </main>
{% endblock %}
