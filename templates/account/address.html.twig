{% extends 'base.html.twig' %}

{% block title %}Mon adresse | Interior Deco{% endblock %}

{% block body %}
    <main class="container px-4 page-item page-account">
        <div class="page-title py-4">
            {{ wo_render_breadcrumbs({separator: '>', listId: 'breadcrumbs'}) }}
            <h2>Mes informations</h2>
        </div>
        <div class="row">
            {{ include('account/_user_menu.html.twig') }}
            <div class="col">
                <div class="mb-2 pb-4">
                    <h3>Mon adresse</h3>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
               <span>
                    <i class="fas fa-check"></i> {{ message }}
               </span>
                        </div>
                    {% endfor %}
                    {{ form_start(addressForm) }}
                    {{ form_widget(addressForm) }}
                    <button type="submit" class="btn btn-primary">Modifier mes identifiants</button>
                    {{ form_end(addressForm) }}
                </div>

            </div>

        </div>

    </main>
{% endblock %}
