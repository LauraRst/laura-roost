{% if posts %}
    {% for post in posts %}
        <div class="col-lg-3">
            <div class="post">
                <div class="post-img">
                    <a href="{{ path('post', {slug: post.slug}) }}">
                        <img src="{{ asset('images/blog/' ~  post.image ) }}" class="d-block w-100">

                    </a>
                </div>
                <div class="post-content">
                    <h3 class="post-title">
                        <a href="{{ path('post', {slug: post.slug}) }}"> {{ post.title }}</a>
                    </h3>

                </div>
            </div>

        </div>
    {% endfor %}
{% else %}
    <p>Aucun article</p>
{% endif %}